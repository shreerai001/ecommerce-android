<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/order_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/order_product_image"
            android:layout_width="match_parent"
            android:layout_height="215dp" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_product_image"
            android:text="Status"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_product_image"
            android:layout_alignParentEnd="true"
            android:text="Date"
            android:layout_margin="10dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/discount_on_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_status"
            android:text="Discount"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_status"
            android:layout_alignParentEnd="true"
            android:text="price"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/discount_on_order"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelWishlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_cancel_black_24dp"
                android:text="Remove"
                android:backgroundTint="#F55D5D"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/proceed_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:text="Checkout"
                android:backgroundTint="#409EE9"
                android:textAllCaps="false" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>