<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sky">

    <RelativeLayout
        android:id="@+id/sell_register_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Company Form"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/ed_cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="company name"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_pan_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="PAN number"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp"

                />

            <EditText
                android:id="@+id/ed_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="phone number"
                android:inputType="number"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="email "
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="address"
                android:maxLines="3"
                android:padding="20dp"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt_pan_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:hint="pan register req.."
                    android:maxLines="2"
                    android:padding="20dp"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/icon_file_pan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#030303"
                    android:src="@drawable/ic_attach_file_black_24dp" />

                <TextView
                    android:id="@+id/txt_company_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_pan_register"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:hint="company_registration req.."
                    android:maxLines="2"
                    android:padding="20dp"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/icon_file_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_pan_register"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#030303"
                    android:src="@drawable/ic_attach_file_black_24dp" />


                <TextView
                    android:id="@+id/txt_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_company_registration"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:hint="Signature register"
                    android:maxLines="2"
                    android:padding="20dp"
                    android:textSize="16dp" />


                <ImageView
                    android:id="@+id/icon_file_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_company_registration"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#030303"
                    android:src="@drawable/ic_attach_file_black_24dp" />


                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_signature"
                    android:layout_marginTop="7dp"
                    android:background="@color/web_color"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="10dp"
                    android:text="Continue"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#fff"
                    android:textSize="19dp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>