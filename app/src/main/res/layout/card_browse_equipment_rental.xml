<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/equipment_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cloud_download_black_24dp" />

        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/equipment_image"
            android:background="@color/colorPrimary"
            android:text="Facebook"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/equipment_model"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/equipment_name"
            android:text="Model: v10.b"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/equipment_description"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/equipment_model"
            android:text="Model: v10.b"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equipment_description"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rentNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                android:text="Rent Now"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_error_outline_black_24dp"
                android:text="View"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>