<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cloud_download_black_24dp" />

        <ImageView
            android:id="@+id/wishlist_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_heart_24dp" />

        <TextView
            android:id="@+id/search_item_model"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/wishlist_icon"
            android:text="Model: v10.b"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/search_item_description"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/search_item_model"
            android:text="Model: v10.b"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/search_item_description"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/search_image"
            android:text="Model: v10.b"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/search_item_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/search_item_description"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text="Model: v10.b"
            android:textAlignment="center" />

    </RelativeLayout>

</android.support.v7.widget.CardView>