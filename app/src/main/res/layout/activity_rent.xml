<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_rent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@mipmap/sky"
    tools:context=".activityRent.RentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:id="@+id/form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Rent Form"
                android:padding="10dp"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Id"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Last Name"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Company"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="First Name"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Eamil"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Phone"
                android:maxLines="1"
                android:inputType="phone"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Address"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <!--<EditText-->
                <!--android:id="@+id/city"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="sans-serif-condensed"-->
                <!--android:hint="City"-->
                <!--android:maxLines="1"-->
                <!--android:padding="20dp"-->
                <!--android:textSize="16dp" />-->

            <Spinner
                android:id="@+id/spn_select_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="16dp" />

            <!--<EditText-->
                <!--android:id="@+id/state"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="sans-serif-condensed"-->
                <!--android:hint="State"-->
                <!--android:maxLines="1"-->
                <!--android:padding="20dp"-->
                <!--android:textSize="16dp" />-->

            <Spinner
                android:id="@+id/spn_select_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Zipcode"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Message"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Save"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@color/web_color"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>