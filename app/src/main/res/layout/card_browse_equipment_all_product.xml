<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardMaxElevation="4dp"
    android:elevation="4dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:id="@+id/relative_cardAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/equipment_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cloud_download_black_24dp" />

        <ImageView
            android:id="@+id/wishlist_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_heart_24dp" />
        <!--<View-->
            <!--android:id="@+id/view1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="@color/grey400"-->
            <!--android:layout_below="@+id/equipment_image"/>-->

        <TextView
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/equipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equipment_image"
            android:text="Facebook"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/equipment_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equipment_name"
            android:text="Model: v10.b"
            android:padding="2dp"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/equipment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equipment_model"
            android:text="Model: v10.b"
            android:padding="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/equipment_description"
            android:fontFamily="sans-serif"
            android:text="28000"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/equipment_description"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_error_outline_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>