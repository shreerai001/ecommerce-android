<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/image_shadow"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profile_image"
                android:text="profile name"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="2dp"
                android:text="subtiltle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <RelativeLayout
            android:id="@+id/rel_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <ImageView
                android:id="@+id/icon_about_us"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_about_us_black_24dp" />

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/icon_about_us"
                android:text="About Us"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">


            <ImageView
                android:id="@+id/icon_policy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_policy_black_24dp" />

            <TextView
                android:id="@+id/txt_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/icon_policy"
                android:text="Policy"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <ImageView
                android:id="@+id/icon_contact_us"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_contact_us_black_24dp" />

            <TextView
                android:id="@+id/txt_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/icon_contact_us"
                android:text="Contact Us"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">


            <ImageView
                android:id="@+id/icon_contact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_contacts_black_24dp" />

            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/icon_contact"
                android:text="Contact"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <ImageView
                android:id="@+id/icon_blogs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_blog_black_24dp" />

            <TextView
                android:id="@+id/txt_blogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/icon_blogs"
                android:text="Blogs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="17sp" />



        </RelativeLayout>


    </LinearLayout>
</FrameLayout>