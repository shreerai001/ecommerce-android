<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sky"
    android:gravity="center"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Your Detail"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ed_cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Company name"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/ed_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="First name"
                android:maxLines="1"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="Last name"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp"

                />

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="email "
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="phone number"
                android:inputType="number"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />


        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin"
            android:layout_marginTop="15dp"
            android:background="#fff">

            <TextView
                android:id="@+id/equipment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:fontFamily="sans-serif-black"
                android:text="Equipments you are loking for"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spn_select_category"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/equipment_title"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="2"
                android:padding="10dp"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spn_brands"
                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/equipment_title"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"

                android:maxLines="2"
                android:padding="10dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_model"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spn_brands"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-condensed"
                android:hint="Model"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_manufacture"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spn_brands"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:hint="Manufacture"
                android:maxLines="2"
                android:padding="20dp"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spn_buy_rental"
                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/ed_manufacture"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-condensed"

                android:maxLines="2"
                android:padding="10dp"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spn_condition"
                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/ed_manufacture"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"

                android:maxLines="2"
                android:padding="10dp"
                android:textSize="16dp" />


            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spn_condition"
                android:background="@color/web_color"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="10dp"
                android:text="Submit"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:textSize="19dp" />


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>